@model Project

<div class="pagetitle">
	<h1>Archive Project</h1>
	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item">Projects</li>
			<li class="breadcrumb-item">Active</li>
			<li class="breadcrumb-item active">Archive</li>
		</ol>
	</nav>
</div>

<div class="col col-lg-6">
	<div class="card">
		<div class="card-header card-title ms-3"><strong>Project: </strong>@Model.Name</div>
		<div class="card-body">
			<form asp-controller="Projects" asp-action="ArchiveProjectConfirmed" method="post" class="mt-2">
				<input type="hidden" asp-for="Id" />
				<p>Are you sure you want to archive this project? It won't appear on active project lists anymore. You can unarchive it later.</p>

				<button type="submit" class="btn btn-warning">Confirm</button>
				<a class="btn btn-outline-secondary" asp-controller="Projects" asp-action="ViewProject" asp-route-projectId="@Model.Id">Cancel</a>
			</form>
		</div>
	</div>
</div>