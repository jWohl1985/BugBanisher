@model AppUser

<div class="col-lg-6">
	<div class="card">
		<div class="row g-0">
			<div class="col-md-2 d-flex justify-content-center align-items-center">
				<img src="~/img/card.jpg" class="rounded-circle" width="100" height="100" alt="...">
			</div>
			<div class="col-md-10">
				<div class="card-body">
					<h5 class="card-title">@Model.FullName</h5>
					<h6 class="card-subtitle">@Model.JobTitle</h6>
					<p class="card-text">Do you really want to remove this employee? They will no longer be able to access your company
						information, and will be removed from all tickets and projects they are assigned to.</p>
				</div>
				<div class="card-footer">
					<form asp-controller="Company" asp-action="RemoveEmployeeConfirmed" method="post">
						<input type="hidden" asp-for="Id" />
						<input type="hidden" asp-for="FirstName"/>
						<input type="hidden" asp-for="LastName"/>
						<button class="btn btn-primary" type="submit">Yes</button>
						<a class="btn btn-outline-secondary" asp-controller="Company" asp-action="ManageEmployees">No</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>