@model Ticket

<div class="pagetitle">
	<h1>Delete Ticket</h1>
	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item">Ticket</li>
			<li class="breadcrumb-item active">Delete</li>
		</ol>
	</nav>
</div>

<div class="col col-lg-6">
	<div class="card">
		<div class="card-header card-title ms-3"><strong>Ticket: </strong>@Model.Title</div>
		<div class="card-body">
			<form asp-controller="Tickets" asp-action="DeleteTicketConfirmed" method="post" class="mt-2">
				<input type="hidden" asp-for="Id" />
				<p>Are you sure you want to delete this ticket? This can't be undone. Consider archiving the ticket instead.</p>

				<button type="submit" class="btn btn-danger">Confirm</button>
				<a class="btn btn-outline-secondary" asp-controller="Tickets" asp-action="ViewTicket" asp-route-ticketId="@Model.Id">Cancel</a>
			</form>
		</div>
	</div>
</div>