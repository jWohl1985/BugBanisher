@model Project

<div class="pagetitle">
	<h1>Delete Project</h1>
	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item">Projects</li>
			<li class="breadcrumb-item">Active</li>
			<li class="breadcrumb-item active">Delete</li>
		</ol>
	</nav>
</div>

<form asp-controller="Projects" asp-action="DeleteProjectConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <label asp-for="Name">Project: </label><p>@Model.Name</p>
    <p>Are you sure you want to delete this project?</p>

    <button type="submit" class="btn btn-danger">Confirm</button>
    <a class="btn btn-outline-secondary" asp-controller="Projects" asp-action="ListActiveCompanyProjects">Cancel</a>
</form>